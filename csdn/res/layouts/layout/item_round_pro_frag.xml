<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical" >

    <com.example.csdn.view.ProgressBar.RoundProgressBar
        xmlns:android_custom="http://schemas.android.com/apk/res-auto"
        android:id="@+id/roundProgressBar"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android_custom:max="100"
        android_custom:pro="10"
        android_custom:roundColor="#D1D1D1"
        android_custom:roundProgressColor="@color/blue"
        android_custom:roundWidth="2dp"
        android_custom:roundtextColor="@color/blue"
        android_custom:textSize="13dp" />

    <com.example.csdn.view.ProgressBar.CircleProgressBarView
        android:id="@+id/circleProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    

</LinearLayout>